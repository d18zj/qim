@model QimErp.Web.Model.LoginModel
@{
    
}
<form asp-controller="Account" asp-action="Login" asp-route-returnurl="@Url.Action("Login")" method="post" class="form-horizontal">
    <h4>Please login.</h4>
    <hr />
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="UserAccount" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="UserAccount" class="form-control" />
            <span asp-validation-for="UserAccount" class="text-danger"></span>
        </div>
    </div>
    
    <div class="form-group">
        <label asp-for="Password" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Remember" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Remember" type="checkbox" />
            
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button type="submit" class="btn btn-default">Login</button>
        </div>
    </div>
</form>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}